@model ProductAccessoryModel

@{
    var activeQuote = ViewData["ActiveQuoteId"] as long?;
    var user = (ViewData["CurrentUser"] as UserSessionModel) ?? new UserSessionModel();

}


<div class="row" style="margin-bottom: 10px;">

    @Html.Partial("ItemQuantityBox", new QuoteItemModel { ProductId = Model.Accessory.ProductId, QuoteId = activeQuote })

    @*@Html.NumericStepperFor2(m => Product.Quantity, Product,0,null )*@

    <div class="product-details">
        <div class="product-image pull-left">
            <a style="padding:0; text-decoration:none;" href="@Url.Action("Product", new { ProductId = Model.Accessory.ProductId })">
                <img src="@Model.Accessory.Image.URL" onerror="this.onerror = null; this.src = '/Images/NoImage.png'" />
            </a>
        </div>
        <div class="product-model-info">
            <p style=""><a style="padding:0;" href="@Url.Action("Product", new { ProductId = Model.Accessory.ProductId })"><strong>@Model.Accessory.Name</strong></a></p>
            <p class="as-lnk">Model No.:</p>
            <p>@Model.Accessory.ProductNumber</p>
            @if (user.ShowPrices)
            {
                <p class="as-lnk">Price:</p>
                <p>@Html.DisplayFor(p => Model.Accessory.Price)</p>
            }
            <p class="as-lnk">Quantity required:</p>
            <p>@Model.Quantity</p>
        </div>
    </div>
    <div class="row-end">&nbsp;</div>
</div>
