@{
    //Layout = "~/Views/Shared/_LayoutPopup.cshtml";
    Layout = null;
}

<div ng-controller="confirmEstDeliveryDateController">
    <form>
        <page-message ng-if="HasPageMessage"></page-message>
        <p>Your order will arrive within these delivery estimates based on your location and selected shipping speed.</p>

        <label>@ResourceUI.EstimatedDelivery:</label>
        <input kendo-date-picker ng-model="vm.estimatedDelivery" required />
        <input type="button" class="k-button btn-primary" ng-click="updateEstDeliveryDate()" value="@ResourceUI.Ok" />

        <error-message ng-if="HasServerError" key="EstimatedDelivery"></error-message>
        @*<error-message ng-if="HasServerError" key="OrderReleaseDateInvalid"></error-message>*@
    </form>
</div>


<script type="text/javascript">
    function ViewModel() {
        var self = this;
        self.projectId = @Html.Raw(Json.Encode(ViewBag.projectId));
        self.quoteId = @Html.Raw(Json.Encode(ViewBag.quoteId));

    }
</script>

<style>
    .btn-primary {
      color: #fff;
      background-color: #337ab7;
      border-color: #2e6da4;
    }
</style>


