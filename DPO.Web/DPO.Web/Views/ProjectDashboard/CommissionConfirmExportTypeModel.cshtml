<div class="modal confirm" id="confirm_modal_commission_request_export_type" style="display: none;">
    <div style="top: 20%;">
        <img src="~/Images/modal-close-btn.png" class="close-btn" />
        <h1>Show cost pricing</h1>
        <p>Should cost pricing be included in this report?</p>
        <a class="btn cancel-btn" id="confirm_modal_commission_request_export_yes" target="_blank" href="#">@ResourceUI.Yes</a>
        <a class="btn cancel-btn" id="confirm_modal_commission_request_export_no" target="_blank" href="#">@ResourceUI.No</a>
    </div>
</div>
<script>
    $(function () {
        $('#commission_request_download_modal_trigger, #commission_request_print_modal_trigger').on('click', function (e) {
            e.preventDefault();

            switch ($(this).attr('id')) {
                case 'commission_request_download_modal_trigger':
                    $('#confirm_modal_commission_request_export_type p').text('Should cost pricing be included in this export?');

                    $('#confirm_modal_commission_request_export_yes')
                        .attr('href', "@Url.Action("CommissionRequestExportWithCostPricing", "Projectdashboard",
                        new { CommissionRequestId = Model.CommissionRequestId, QuoteId = Model.QuoteId, ProjectId = Model.ProjectId })");

                    $('#confirm_modal_commission_request_export_no')
                        .attr('href', "@Url.Action("CommissionRequestExport", "Projectdashboard",
                        new { CommissionRequestId = Model.CommissionRequestId, QuoteId = Model.QuoteId, ProjectId = Model.ProjectId })");

                    break;

                case 'commission_request_print_modal_trigger':
                    $('#confirm_modal_commission_request_export_type p').text('Should cost pricing be included in this print report?');

                    $('#confirm_modal_commission_request_export_yes')
                        .attr('href', "@Url.Action("CommissionRequestPrintWithCostPricing", "Document",
                       new { Id = Model.CommissionRequestId, ProjectId = Model.ProjectId, QuoteId = Model.QuoteId })");

                    $('#confirm_modal_commission_request_export_no')
                        .attr('href', "@Url.Action("CommissionRequestPrint", "Document",
                      new { Id = Model.CommissionRequestId, ProjectId = Model.ProjectId, QuoteId = Model.QuoteId })");

                    break;

                  
            }

            $('#confirm_modal_commission_request_export_type').fadeIn(200);
        });
    });
</script>

