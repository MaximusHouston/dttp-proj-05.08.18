@*add these reference for using MiniProfiler*@
@using System.Web.Optimization;  
@using StackExchange.Profiling;

<!DOCTYPE html>
<html lang="en" data-ng-app="DPO">
<head>
    <title>@ViewBag.Title - Daikin Project Office</title>

    @Html.Partial("SiteHeader")

    @Styles.Render("~/Content/css")
    @RenderSection("Page_Styles", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootbox.js")"></script>

    <link rel="stylesheet" href="~/Content/font-awesome-4.6.1/css/font-awesome.min.css">

    <meta name="description" content="Welcome to Daikin City for all of your North America Daikin product needs!" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>
<body>

    @Html.Partial("_LoginPartial", ViewData["CurrentUser"])
    
    <div id="content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/scripts")

    <!-- Angular Scripts -->
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/angularjs/dpo/core")
    @Scripts.Render("~/bundles/angularjs/dpo/projects")

    <!-- Kendo -->
    @Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/kendo")

    <!--Bootstrap-->
    @*@Scripts.Render("~/bundles/bootstrap")*@

    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootbox.js")"></script>

    <div id="kendoPopupWindow"></div>

    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-51047439-1', 'auto');
        ga('send', 'pageview');
    </script>

    <!--writeout the css and javascript that renders the profiling results-->
    @MiniProfiler.RenderIncludes()
    @*TODO:  Ask Aaron what this does*@
    @*@Scripts.Render("~/Scripts/Js")*@
</body>
</html>
